<% postsArray.forEach(function(i){ %>
    <h2><%= i.title %></h2>
    
    <% if ((i.body.length) <= 100){ %>
        <p><%= i.body %></p>
    <% }else{ %>
        <% let truncated_text = i.body.slice(0,100)+"..." %>
        <p><%= truncated_text %><a href="/posts/<%=i.title%>"> Read More</a></p>
    <% } %>

<% }) %>


